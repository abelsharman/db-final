#bottom
footer
  .bgf
    .contentf
      if rating
        h1 The most rating books 
        .rating
          if rating
            each val in rating  
              .val 
                .val_inner
                  h3= val[0]
                  p= val[1]
                  p= val[2]

        


      .search
        #app
          form(action='/search' method='get')

            input#tit(type='text' name="title" placeholder='Search by title')

            input#inp(type="text", name="author" placeholder="Search by author")

            select(name="option")
              option(value="1") Sort by rating
              option(value="2") From oldest to newest
              option(value="3") From newest to oldest
              option(value="4") Short read


            input#sea(type="submit", value="Search")
  
        .col_outer
          if list1
            each val in list1
              .col 
                .col_inner
                  h2= val.title
                  p Author is #{val.author}
                  p Rating is #{val.average_rating}/5
                  p Number of page is #{val.num_page}
                
     


      